<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
 xmlns="urn:nhibernate-mapping-2.2"
 assembly="Comments.NHibernateDataProvider"
 namespace="Comments.Business.Models"
 auto-import="true">
  <class name="Comment, Comments.Business" table="Comments">
    <id name="Id" access="property" type="string">
      <generator class="assigned"></generator>
    </id>
    <property name="EventId" access="property" type="string"></property>
    <property name="AuthorId" access="property" type="string"></property>
    <property name="Text" access="property" type="string"></property>
    <property name="AuthorName" access="property" type="string"></property>
    <property name="PostingTime" access="property" type="datetime"></property>
  </class>
</hibernate-mapping>