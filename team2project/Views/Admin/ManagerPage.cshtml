@{
    ViewBag.Title = "Manager Page";
}
@model System.Collections.Generic.List<team2project.Models.EventViewModel>
@using System.Globalization
@section css{
    @Styles.Render("~/Content/Home/List.css")
}
<div class="grid">
    <h1>@ViewBag.Title</h1>
    <table class="table hovered striped border bordered sortable-markers-on-left">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>From</th>
                <th>To</th>
                <th>Location</th>
                <th>Property</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evnt in Model)
            {

                <tr>
                    <td>@evnt.Title</td>
                    <td>@evnt.Title</td>
                    <td>
                        @Date(evnt.FromDate, evnt.ToDate)
                    </td>
                    <td>@(evnt.FromDate != null ? evnt.FromDate.Value.ToString("hh:mm") : "n/a")</td>
                    <td>@(evnt.FromDate != null ? evnt.ToDate.Value.ToString("hh:mm") : "n/a")</td>
                    <td>@evnt.Location</td>
                    <td>
                        @if (evnt.Checked)
                        {
                            if (evnt.Active)
                            {
                                <button class="visibility" value="Активировать" >@Html.ActionLink("","")</button>
                            }
                            else
                            {
                                <input type="button" class="visibility" value="Деактивировать" />
                            }
                        }
                        else
                        {
                            <input type="button" value="Подтвердить" />
                        }
                    </td>
                    <td>
                        <input type="button" value="Удалить" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $("#delete").click(function () {

    });
</script>
@helper Date(DateTime? FromDate, DateTime? ToDate)
{
    @(FromDate != null ? FromDate.Value.ToString("dd MMMM yyyy") : "n/a")
    if (ToDate != null && (FromDate == null || ToDate.Value.DayOfYear != FromDate.Value.DayOfYear))
    {
        @ToDate.Value.ToString("dd MMMM yyyy")
    }
}