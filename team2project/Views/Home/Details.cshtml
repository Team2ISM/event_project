@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var evnt = ViewBag.curEvent;
}

<div class="grid" style="margin:auto">
    <div class="row cells12">
        <div class="cell">
            <div class="tile-small">
                <h4>@evnt.from.ToString("dd")</h4>
                <p>@evnt.from.ToString("MMMM")</p>
            </div>
        </div>
        <div class="cell colspan11">
            <h2>@evnt.title</h2>
        </div>
        <div class="row">
            <div class="cell">
                <p>From: @evnt.from</p>
            </div>
            <div class="cell">
                <p>To: @evnt.to</p>
            </div>
            <div class="cell">
                <p>Location: @evnt.location</p>
            </div>
        </div>
        <div class="row cells4">
            <div class="cell colspan3">
                <p>@evnt.desc</p>
            </div>
        </div>
    </div>
</div>
