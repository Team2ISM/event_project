@model System.Collections.Generic.List<team2project.Models.EventViewModel>

@{
    ViewBag.Title = "Текущие/будущие события";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using team2project.Helpers
@section css{
    @Styles.Render("~/Content/Home/List.css")
    @Styles.Render("~/Content/jquery-ui.min.css")
    @Styles.Render("~/Content/jquery-ui.theme.min.css")
    @Styles.Render("~/Content/jquery-ui.structure.min.css")
}

<div class="container">
    <h2 class="center blue-grey-text">Текущие/будущие события</h2>
    <div class="width80">
        @Html.RouteLink("Прошедшие события", "PastEvents", null, new { Class = "blue-grey-text" })
    </div>
    <table class="striped width80 centered">
        <thead>
            <tr>
                <th>Заголовок</th>
                <th>Описание</th>
                <th>Дата, время</th>
                <th>Город</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evnt in Model)
            {
                <tr>
                    <td>@Html.RouteLink(evnt.Title, "EventDetails", new { evnt.Id })</td>
                    <td>@Html.RouteLink(evnt.TextDescription.Cut(), "EventDetails", new { evnt.Id })</td>
                    <td>
                        @Html.RouteLink(evnt.FromDate != null ? evnt.FromDate.Value.ToString("dd MMMM yyyy") : "n/a", "EventDetails", new { evnt.Id })
                        @Html.RouteLink(",", "EventDetails", new { evnt.Id })
                        @Html.RouteLink(evnt.FromDate != null ? evnt.FromDate.Value.ToString("H:mm") : "n/a", "EventDetails", new { evnt.Id })
                    </td>
                    <td>@Html.RouteLink(evnt.Location, "EventDetails", new { evnt.Id })</td>
                    <td id="TdUpdate">@Html.RouteLink("Редактировать", "UpdateEvent", new { evnt.Id }, new { @class = "btn waves-effect waves-light dark-blue-grey white-text" })</td>
                    <td><button id="TdDell" class="btn waves-effect waves-light white-text red" onclick="deleteEvent('@evnt.Id')">Удалить</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/jquery.js")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/deleteButton.js")
}