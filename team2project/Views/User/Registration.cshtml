@using team2project.Models
@model UserViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    @Styles.Render("~/Content/Home/Details.css")
}

<div class="grid">
    <h2>Registration</h2>
    @using (Html.BeginForm("Registration", "User", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="input-field col s6">
            @Html.LabelFor(m => m.Name, "Name")<br>
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="input-field col s6">
            @Html.LabelFor(m => m.Surname, "Surname")<br>
            @Html.EditorFor(m => m.Surname)
            @Html.ValidationMessageFor(m => m.Surname)
        </div>
        <div class="input-field col s6">
            @Html.LabelFor(m => m.Email, "Email")<br>
            @Html.EditorFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="input-field col s12">
            @Html.LabelFor(m => m.Location, "Location")<br>
            @Html.EditorFor(m => m.Location)
            @Html.ValidationMessageFor(m => m.Location)
        </div>
        <div class="input-field col s12">
            @Html.LabelFor(m => m.Password, "Password")<br>
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="input-field col s12">
            @Html.LabelFor(m => m.RepeatPassword, "Repeat")<br>
            @Html.PasswordFor(m => m.RepeatPassword)
            @Html.ValidationMessageFor(m => m.RepeatPassword)
        </div>
        <button class="btn waves-effect waves-light" type="submit">Sign Up</button>
        <div>
            @ViewBag.RegistrationSuccess
        </div>
    }
</div>