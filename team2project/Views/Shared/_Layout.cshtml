<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/metro")
    @Styles.Render("~/Content/materialize/materialize.css")
    @Styles.Render("~/Content/css")
    @RenderSection("css", false)
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/materialize/materialize.min.js")" type="text/javascript"> </script>
    <script>
        $(document).ready(function () {
            var butt = $(".dropdown-button"), drop = $("#dropdown1");
            butt.on('click', function () {
                drop.stop();
                drop.show(150);
            });
            drop.mouseleave(function () {
                drop.stop();
                drop.hide(150);
            });
        });
    </script>
</head>
<body>
  <ul id="dropdown1" class="dropdown-content">
   @{
       if (!User.Identity.IsAuthenticated)
       {
                        <li>
                            @Html.RouteLink("Регистрация", "Registration", FormMethod.Post, new { @class = "blue-text" })
                        </li>
                        <li>
                            @Html.RouteLink("Вход", "Login", FormMethod.Post, new { @class = "blue-text" })
                        </li>   
       }
                 }
                
                @{ 
                    if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.RouteLink("Сменить пароль", "Update", FormMethod.Post, new { @class = "blue-text" })
                        </li>
                        <li>
                            @Html.RouteLink("Выйти", "Logout", FormMethod.Post, new { @class = "blue-text" })
                        </li>
                        <li class="divider"></li>
                    }
                }
        </ul>
    <nav>
  <div class="nav-wrapper blue">
   
    @Html.RouteLink("Субботник", "Index", htmlAttributes: new { Class = "white-text", Id = "logo" })
    <ul class="hide-on-med-and-down right">
        
            <li class="menu-content">
                @Html.RouteLink("Список событий", "EventList", FormMethod.Post, new { @class = "white-text" })
            </li>
            <li class="menu-content">
                @Html.RouteLink("Создать событие", "CreateEvent", FormMethod.Post, new { @class = "white-text" })
            </li>
        @if (User.Identity.IsAuthenticated)
        {
            char[] n = new char[19];
            string str = @User.Identity.Name;
            str.CopyTo(0, n, 0, 16);
             <li class="menu-content"><a class="dropdown-button" href="#!" data-activates="dropdown1"><i class="white-text" style="font-size: 1rem;">@foreach(var p in n){@p}...</i></a></li>
        }
        else
        {
            <li class="menu-content"><a class="dropdown-button white-text" href="#!" data-activates="dropdown1">Войти<i class="mdi-action-toc right white-text"></i></a></li>
        }
        @ThisPage()
    </ul>
  </div>
</nav>

    <style>
    </style>
@RenderBody()
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/materialize/materialize.min.js")
    @Scripts.Render("~/Scripts/metro")

    @RenderSection("scripts", required: false)
     <script>
         var size = [document.documentElement.clientWidth, document.documentElement.clientHeight];
         window.onresize = function () {
             document.body.style.zoom = document.documentElement.clientWidth / size[0];
         }
    </script>
</body>
</html>
@helper ThisPage()
{
    var filters = Request.Url.AbsolutePath.Split('/');
    if (filters[1] == "Events")
    {
        <script>
            $('.menu-content:eq(0)').addClass('active')
        </script>
    }
    else
        if (filters[1] == "createEvent")
        {
        <script>
            $('.menu-content:eq(1)').addClass('active')
        </script>
        }
        else
        if (filters[1] == "User")
        {
        <script>
            $('.menu-content:eq(2)').addClass('active')
        </script>
        }
        
}
