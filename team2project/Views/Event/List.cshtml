@{
    ViewBag.Title = "List";
}

@model System.Collections.Generic.List<team2project.Models.EventViewModel>
@using System.Globalization
@section css{
    @Styles.Render("~/Content/Home/List.css")
}

<div class="grid">
    <h1>@ViewBag.Title</h1>
    <table class="table hovered striped border bordered sortable-markers-on-left">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evnt in Model)
            {
                <tr>
                    <td>@Html.RouteLink(evnt.Title, "EventDetails", new { evnt.Id })</td>
                    <td>@Html.RouteLink(evnt.Title, "EventDetails", new { evnt.Id })</td>
                    <td>@Html.RouteLink(evnt.From != null ? evnt.From.Value.ToString("dd MMMM yyyy") : "n/a", "EventDetails", new { evnt.Id })
                        @if (evnt.To != null && ( evnt.From != null || evnt.To.Value.DayOfYear != evnt.From.Value.DayOfYear )) {
                            @Html.RouteLink(evnt.To.Value.ToString("dd MMMM yyyy"), "EventDetails", new { evnt.Id })
                        }
                    </td>
                    <td>@Html.RouteLink(evnt.From !=null? evnt.From.Value.ToString("hh:mm") + " - " + @evnt.To.Value.ToString("hh:mm"):"n/a", "EventDetails", new { evnt.Id })</td>
                    <td>@Html.RouteLink(evnt.Location, "EventDetails", new { evnt.Id })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
