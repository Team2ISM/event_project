@{
    ViewBag.Title = "Details";
}

@model team2project.Models.EventViewModel
@using System.Globalization
@section css{
    @Styles.Render("~/Content/Home/Details.css")
}
<div class="grid">
    <div class="row cells12">
        <div class="cell colspan2">
            <div class="tile-small">
                <h4>@Model.From.ToString("dd")</h4>
                <p>@Model.From.ToString("MMMM")</p>
            </div>
        </div>
        <div class="cell colspan10">
            <h2>@Model.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="cell colspan2">
            <button class="button danger loading-pulse text-shadow">Join Event</button>
        </div>
    </div>
    <hr />
    <div class="row">
        <table>
            <tbody>
                <tr>
                    <td>Date:</td>
                    <td>@Model.From.ToString("dd MMMM yyyy")</td>
                </tr>
                <tr>
                    <td>From:</td>
                    <td>@Model.From.ToString("hh:mm")</td>
                </tr>
                <tr>
                    <td>To:</td>
                    <td>@Model.To.ToString("hh:mm")</td>
                </tr>
                <tr>
                    <td>Location:</td>
                    <td>@Model.Location</td>
                </tr>
            </tbody>
        </table>
    </div>
    <hr />
    <div class="row description">
        <div class="cell">
            @{
                Model.LongDescription = null;
            }
            @if (!@String.IsNullOrEmpty(Model.LongDescription))
            {
                <p>@Model.LongDescription</p>
            }
            else
            {
                <p>@Model.Description</p>
            }
        </div>
    </div>
</div>
